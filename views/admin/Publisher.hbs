<div class="span9">
    <h1 class="page-header">
        Quản lý
        <small> Nhà xuất bản</small>
    </h1>
    <div id="page-wrapper">

        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <ul class="breadcrumb">
                        <li style="font-size: x-large">
                            <i class="fa fa-plus fa-x"></i>
                            <b> Thêm nhà xuất bản</b>
                        </li>
                    </ul>
                    <ol class="breadcrumb">
                        <li class="active">
                            <i class="fa fa-dashboard"></i> Thêm nhà xuất bản mới
                        </li>
                    </ol>
                </div>
            </div>

            <div class="well">
                <form class="form-horizontal" action="" method="POST" role="form">
                    <h4>Thông tin nhà xuất bản</h4>
                    <div class="control-group">
                        <label class="control-label">Tên
                        </label>
                        <div class="controls">
                            <input type="text" id="inputFname" name="ten_nha_xuat_ban" placeholder="Name">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Địa chỉ
                        </label>
                        <div class="controls">
                            <input type="text" id="inputDC" name="dia_chi" placeholder="Name">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Điện thoại
                        </label>
                        <div class="controls">
                            <input type="text" id="inputDT" name="dien_thoai" placeholder="Name">
                        </div>
                    </div>
                    <div class="control-group">
                        <label class="control-label">Email
                        </label>
                        <div class="controls">
                            <input type="text" id="inputEM" name="email" placeholder="Name">
                        </div>
                    </div>
                    <br>
                    <button type="submit" class="btn btn-primary">
                        <span class="glyphicon glyphicon-ok"></span>
                        Add
                    </button>
                </form>
            </div>


            <br>
            <br>
            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <ul class="breadcrumb">
                        <li style="font-size: x-large">
                            <i class="fa fa-pencil fa-x"></i>
                            <b> Cập nhật nhà xuất bản</b>
                        </li>
                    </ul>
                    <ol class="breadcrumb">
                        <li class="active">
                            <i class="fa fa-dashboard"></i> Cập nhật thông tin nhà xuất bản
                        </li>
                    </ol>
                </div>
            </div>
            <div class="well">
                <table class="table">
                    <thead style="text-align: center">
                        <tr>
                            <th style="border:1px solid black">ID</th>
                            <th style="border:1px solid black">Tên nhà xuất bản</th>
                            <th style="border:1px solid black">Địa chỉ</th>
                            <th style="border:1px solid black">Điện thoại</th>
                            <th style="border:1px solid black">Email</th>
                            <th style="border:1px solid black">Cập nhật nhà xuất bản</th>
                            <th style="border:1px solid black">Xoá nhà xuất bản</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each data.nha_xuat_ban}}

                        <tr style="border:1px solid black">
                            <td style="border:1px solid black">{{id}}</td>
                            <td style="border:1px solid black">{{ten_nha_xuat_ban}}</td>
                            <td style="border:1px solid black">{{dia_chi}}</td>
                            <td style="border:1px solid black">{{dien_thoai}}</td>
                            <td style="border:1px solid black">{{email}}</td>
                            <td style="border:1px solid black">
                                <a href="/admin/updatePS/{{id}}">
                                    <button class="btn btn-success">Cập nhật</button>
                                </a>
                            </td>
                            <td style="border:1px solid black">
                                <a href="/admin/Publisher/{{id}}">
                                    <button class="glyphicon glyphicon-remove" style="color: red"></button>
                                </a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>>