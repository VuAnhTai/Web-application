<div id="page-wrapper">

    <div class="container-fluid">

        <!-- Page Heading -->
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">
                    Quản lý
                    <small> Nhà xuất bản</small>
                </h1>
                <ol class="breadcrumb">
                    <li class="active">
                        <i class="fa fa-dashboard"></i> Cập nhật thông tin nhà xuất bản
                    </li>
                </ol>
            </div>
        </div>
    </div>
</div>
<div class="row">
    {{#with data.nha_xuat_ban}}

    <div class="container">

        <form action="" method="POST" role="form">
            <div class="form-group">
                <label for="">ID Nhà xuất bản</label>
                <input type="text" class="form-control" id="" name="type_name" readonly value="{{id}}">
            </div>
            <div class="form-group">
                <label for="">Tên nhà xuất bản</label>
                <input type="text" class="form-control" id="" name="ten_nha_xuat_ban" placeholder="Input field" value="{{ten_nha_xuat_ban}}">
            </div>
            <div class="form-group">
                <label for="">Địa chỉ</label>
                <input type="text" class="form-control" id="" name="dia_chi" placeholder="Input field" value="{{dia_chi}}">
            </div>
            <div class="form-group">
                <label for="">Điện thoại</label>
                <input type="text" class="form-control" id="" name="dien_thoai" placeholder="Input field" value="{{dien_thoai}}">
            </div>
            <div class="form-group">
                <label for="">Email</label>
                <input type="text" class="form-control" id="" name="email" placeholder="Input field" value="{{email}}">
            </div>

            <a class="btn btn-default" href="/admin/Publisher" role="button">
                <span class="glyphicon glyphicon-arrow-left"></span>
                Back
            </a>
            <button type="submit" class="btn btn-primary">
                <span class="glyphicon glyphicon-ok"></span>
                Update
            </button>
        </form>
        <h1></h1>
        <div style="">

        </div>
    </div>
    
    {{/with }}
</div>